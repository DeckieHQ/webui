<div id="attended-events">
  {{#each model as |submission|}}
    <div class='hit'>
      {{#link-to 'event' submission.event}}
        <div class='row head'>
          <div class='col-xs-12 col-md-6'>
            <h3 class={{submission.status}}>{{submission.event.title}}</h3>
            <div class={{submission.status}}>{{t submission.status}}</div>
          </div>
          <div class='col-xs-12 col-md-6'>
            <div class="details">
              <div class="date">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                {{moment-format submission.event.begin_at 'DD MMMM'}}
              </div>
              <div class="time">
                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                {{moment-format submission.event.begin_at 'HH:mm'}}
              </div>
              <div class="place">
                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                {{capitalize submission.event.city}}
              </div>
            </div>
          </div>
        </div>

        <div class='row'>
          <div class='col-xs-12 col-md-8'>
            <div class='description'>
             {{submission.event.short_description}}
            </div>
            {{display-categories event=submission.event}}
            <div class='host'>
              <span class='avatar-small'>
                {{avatar-display profile=submission.event.host}}
              </span>

              <span>{{name-display profile=submission.event.host}}</span>
            </div>
          </div>
          <div class='col-xs-12 col-md-4'>
            <div class="attendees">
              <span class='capacity'>
                {{plus-one count=submission.event.attendees_count}}
                /
                {{plus-one count=submission.event.min_capacity}}
                -
                {{plus-one count=submission.event.capacity}}
                <span class='icon-player'></span>
              </span>
            </div>
          </div>
        </div>
      {{/link-to}}
    </div>
  {{else}}
    <div class="well">
      <div class='no-event'>{{t 'account.attended-events.empty'}}</div>
      <hr>
      <div class='create'>
        {{#link-to 'search' class='goto'}}{{t 'navigation.search'}}{{/link-to}}
      </div>
    </div>
  {{/each}}
</div>
