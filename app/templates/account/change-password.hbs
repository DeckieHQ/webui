<form>
  {{validated-input label="Current password" placeholder="Enter current password" type="password" value=model.current_password serverErrors=model.errors.current_password errors=errors.model.current_password showAllErrors=showErrors}}
  {{validated-input label="New password" placeholder="Enter new password" type="password" value=model.password serverErrors=model.errors.password errors=errors.model.password showAllErrors=showErrors}}
  {{validated-input label="Confirm new password" placeholder="Confirm new password" type="password" value=model.confirm_password serverErrors=model.errors.confirm_password errors=errors.model.confirm_password showAllErrors=showErrors}}

  {{dynamic-submit actionOnSubmit="change_password"}}
</form>
