{{#if updated}}
  <div class='updated'>
    {{t 'account.password.updated'}}
  </div>
{{/if}}

<div class='well'>
  <form>
    {{validated-input label="label.current-password" placeholder="placeholder.current-password" type="password" value=model.current_password serverErrors=model.errors.current_password errors=errors.model.current_password}}
    {{validated-input label="label.new-password" placeholder="placeholder.new-password" type="password" value=model.password serverErrors=model.errors.password errors=errors.model.password}}
    {{validated-input label="label.confirm-password" placeholder="placeholder.confirm-password" type="password" value=model.confirm_password serverErrors=model.errors.confirm_password errors=errors.model.confirm_password}}

    {{dynamic-submit actionOnSubmit="change_password"}}
  </form>
</div>
