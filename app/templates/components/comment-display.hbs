<div class='well'>
  <div class='row'>
    <div class='col-lg-8'>
      {{#link-to 'profile' comment.author}}
        {{comment.author.display_name}}
      {{/link-to}}
    </div>

    {{#unless isUpdating}}
      <div class='col-lg-4'>
        {{#if canDelete}}
          <button {{action 'delete_comment' comment}} class="btn btn-danger">
            Delete comment
          </button>
        {{/if}}

        {{#if isOwner}}
          <button {{action 'toggle_update_comment' comment}} class="btn btn-warning">
            Update comment
          </button>
        {{/if}}
      </div>
    {{/unless}}
  </div>

  <div class='row'>
    <div class='col-lg-12'>
      {{#if isUpdating}}
        <form>
          {{validated-input value=comment.message errors=errors.comment.message}}

          <div class='submit'>
            <button {{action 'cancel_update'}} class="btn btn-danger">
              Cancel
            </button>
            {{dynamic-submit actionOnSubmit="update_comment"}}
          </div>
        </form>
      {{else}}
        <div>{{comment.message}}</div>
      {{/if}}
    </div>
  </div>
</div>
