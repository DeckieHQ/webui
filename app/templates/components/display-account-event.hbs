<div class='hit'>
  {{#link-to 'event' event}}
    <div class='row head'>
      <div class='col-xs-12 col-md-6'>
        {{#if event.flexible}}
          <h3>{{event.title}}</h3>
        {{else}}
          <h3 class={{status}}>{{event.title}}</h3>
        {{/if}}
        {{#if event.opened}}
          <div class={{status}}>{{t status}}</div>
        {{/if}}
      </div>
      <div class='col-xs-12 col-md-6'>
        {{event-details event=event}}
      </div>
    </div>

    <div class='row body'>
      <div class='infos col-xs-12 col-md-8'>
        <div class='description'>
         {{event.short_description}}
        </div>
        {{display-categories event=event}}
        <div class='host'>
          <span class='avatar-small'>
            {{avatar-display profile=event.host}}
          </span>

          <span>{{name-display profile=event.host}}</span>
        </div>
      </div>
      <div class='col-xs-12 col-md-4 no-padding'>
        {{plus-one event=event}}
      </div>
    </div>
  {{/link-to}}
</div>
