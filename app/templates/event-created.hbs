<div class='col-lg-6 col-lg-offset-3 well'>
  <div class='row margin-bottom'>
    <div class='col-lg-12 success'>Your event has been successfully created.</div>
  </div>

  <div class="line-separator"></div>

  <div class='row margin-top'>
    <div class='col-lg-8'>
      <div class='event-title'>{{model.title}}</div>
      <div>
        {{model.short_description}}
      </div>
    </div>
    <div class='col-lg-4'>
      <b>{{moment-format model.begin_at}}</b>
      <div>({{moment-from-now model.begin_at}})</div>
      {{#if model.end_at}}
        <div>End at: {{moment-format model.end_at}}</div>
      {{/if}}
    </div>
  </div>

  <div class='row margin-top margin-bottom'>
    <div class='col-lg-4'>
      <b>Category: {{model.category}}</b>
    </div>
    <div class='col-lg-4'>
      <b>Expected ambiance: {{model.ambiance}}</b>
    </div>
    <div class='col-lg-4'>
      <b>Minimum level required: {{model.level}}</b>
    </div>
  </div>

  <div class="line-separator"></div>

  <div class='row margin-top margin-bottom'>
    <div class='col-lg-12 center-text'>
      Inviter des amis par email
    </div>
  </div>

  <div class="line-separator"></div>

  <div class='row margin-top'>
    <div class='col-lg-6 center-text'>
      Partager sur Facebook
    </div>
    <div class='col-lg-6 center-text'>
      {{#link-to 'event' model}}<button class='btn btn-success'>Go to event</button>{{/link-to}}
    </div>
  </div>
</div>
