<div class='well col-lg-6 col-lg-offset-3'>
  <form>
    <div class='row'>
      <div class='col-lg-12'>
        {{validated-input label="label.title" placeholder="placeholder.title" value=model.title serverErrors=model.errors.title errors=errors.model.title}}
      </div>
    </div>

    <div class='row'>
      <div class='col-lg-12'>
        {{validated-textarea rows="7" label="label.description" placeholder="placeholder.feedback" value=model.description serverErrors=model.errors.description errors=errors.model.description}}
      </div>
    </div>

    <div class='row'>
      <div class='col-lg-12'>
        <label>{{t 'label.contact-email'}}</label>
        <span>{{t 'optional'}}</span>
        <div>{{t 'feedback-email'}}</div>
        {{validated-input placeholder="placeholder.contact-email" value=model.email serverErrors=model.errors.email errors=errors.model.email}}
      </div>
    </div>

    <div class='row'>
      <div class='col-lg-12'>
        <div class='submit'>{{dynamic-submit actionOnSubmit="create"}}</div>
      </div>
    </div>
  </form>
</div>
