<div id="welcome">
  <div id='welcome-container'>
    <div class='welcome'>
      <h1>{{t 'welcome.title'}}</h1>

      {{#link-to 'search'}}<button class="btn btn-success btn-lg">{{t 'welcome.button'}}</button>{{/link-to}}
    </div>
  </div>

  <div id="suggested-events" class="row">
    {{#each model as |event|}}
      <div class="suggested-event col-md-4">
        {{#link-to 'event' event.objectID}}
          <div class="well">
            <span class="title">
              <h3>{{event.title}}</h3>
            </span>

            <div class="details">
              <div class="date">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                {{moment-format event.begin_at 'DD MMMM'}}
              </div>
              <div class="time">
                <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                {{moment-format event.begin_at 'hh:mm'}}
              </div>
              <div class="place">
                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                {{capitalize event.city}}
              </div>
            </div>

            <div class="clearfix"></div>

            <div class="attendees">
              <span>{{plus-one count=event.attendees_count}} / {{plus-one count=event.capacity}}</span>
            </div>

            <div class="hide categories">
              <span class="category">{{event.category}}</span>
              <span class="ambiance">{{event.ambiance}}</span>
              <span class="level">{{event.level}}</span>
            </div>

            <div class='event-description'>
              {{event.short_description}}
            </div>

            <hr>

            <div class="host">
              <div class="row">
                <div class="avatar col-md-3">
                  {{avatar-display profile=event.host}}
                </div>

                <div class="col-md-9">
                  <div class="name">
                    {{name-display profile=event.host}}
                  </div>

                  <div class="profile-description">
                    {{event.host.short_description}}
                  </div>
                </div>
              </div>
            </div>

            <hr>

            <div class="goto">
              <span class="my-btn">Acc√©der</span>
            </div>
          </div>
        {{/link-to}}
      </div>
    {{/each}}
  </div>

  <div id='about'>
    <div class='col-md-6'>
      <h3>Trouver des parties</h3>
      <div>qzdqzd qzdqzdqz dqzdqz dqzdqzd qzdqzdq zdqzdqzd qzdqzdqzd</div>
      {{#link-to 'search'}}<div class='goto'>Search</div>{{/link-to}}
    </div>
    <div class='col-md-6'>
      <h3>Trouver des parties</h3>
      <div>qzdqzd qzdqzdqz dqzdqz dqzdqzd qzdqzdq zdqzdqzd qzdqzdqzd</div>
      {{#link-to 'events.new'}}<div class='goto'>New event</div>{{/link-to}}
    </div>
  </div>

  <!-- <div class="clearfix"></div> -->

  <div id='beta'>
    <div class='col-md-12'>
      <h3>Deckie version BETA</h3>
      <div>qzdqzd qzdqzdqz dqzdqz dqzdqzd qzdqzdq zdqzdqzd qzdqzdqzd</div>
      {{#link-to 'feedbacks.new'}}<div class='goto'>Send feedback</div>{{/link-to}}
