<div id="welcome">
  <div id='welcome-container'>
    <div class='welcome'>
      <h1>
        <span>{{t 'welcome.title.meet'}}</span>
        <span class='success'>{{t 'welcome.title.people'}}</span>
        <span>{{t 'welcome.title.play'}}</span>
        <span class='success'>{{t 'welcome.title.game'}}</span>
        <span>{{t 'welcome.title.favorite'}}</span>
      </h1>

      {{#link-to 'search'}}<button class="goto-welcome">{{t 'welcome.button'}}</button>{{/link-to}}
      <!-- <h4 class='beta-tmp'>
        {{t 'welcome.beta-tmp'}}
      </h4> -->
    </div>
  </div>

  <div id="suggested-events" class="row">
    {{#each model as |event|}}
      <div class="suggested-event col-md-4">
        {{#link-to 'event' event.objectID}}
          <div class="well">
            <span class="title">
              <h3>{{event.title}}</h3>
            </span>

            <div class="details">
              {{#if event.flexible}}
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                {{t 'date-flexible-from'}}
                {{moment-format event.begin_at_range.min 'DD MMMM'}}
              {{else}}
                <div class="date">
                  <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                  {{moment-format event.begin_at 'DD MMMM'}}
                </div>
                <div class="time">
                  <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                  {{moment-format event.begin_at 'HH:mm'}}
                </div>
              {{/if}}
              <div class="place">
                <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                {{capitalize event.city}} {{short-postcode postcode=event.postcode}}
              </div>
            </div>

            <div class="clearfix"></div>

            {{plus-one event=event}}

            <div class="hide categories">
              <span class="category">{{event.category}}</span>
              <span class="ambiance">{{event.ambiance}}</span>
              <span class="level">{{event.level}}</span>
            </div>

            <div class='event-description'>
              {{event.short_description}}
            </div>

            <hr>

            <div class="host">
              <div class="row">
                <div class="avatar col-md-3">
                  {{avatar-display profile=event.host}}
                </div>

                <div class="col-md-9">
                  <div class="name">
                    {{name-display profile=event.host}}
                  </div>

                  <div class="profile-description">
                    {{event.host.short_description}}
                  </div>
                </div>
              </div>
            </div>

            <hr>

            <div class="goto">
              <span class="my-btn">{{t 'welcome.access'}}</span>
            </div>
          </div>
        {{/link-to}}
      </div>
    {{/each}}
  </div>

  <div id='about'>
    <div class="row">
      <div class='col-xs-12 col-md-6'>
        <h3>{{t 'welcome.find-events.title'}}</h3>
        <div>{{t 'welcome.find-events.content'}}</div>
        {{#link-to 'search'}}<div class='goto'>{{t 'navigation.search'}}</div>{{/link-to}}
      </div>
      <div class='col-xs-12 col-md-6'>
        <h3>{{t 'welcome.create-events.title'}}</h3>
        <div>{{t 'welcome.create-events.content'}}</div>
        {{#link-to 'events.new'}}<div class='goto'>{{t 'navigation.events'}}</div>{{/link-to}}
      </div>
    </div>
  </div>

  <div id='beta'>
    <div class='col-md-12'>
      <h3>{{t 'welcome.beta.title'}}</h3>
      <div>{{t 'welcome.beta.content'}}</div>
      {{#link-to 'feedbacks.new'}}<div class='goto'>{{t 'navigation.feedbacks'}}</div>{{/link-to}}
    </div>
  </div>
</div>
