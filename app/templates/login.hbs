<h2>Login</h2>

<form {{action "authenticate" on="submit"}}>
  {{validated-input label="Email" placeholder="Enter email" value=email errors=errors.email showAllErrors=showErrors class="form-group"}}
  {{validated-input label="Password" placeholder="Enter password" type="password" value=password errors=errors.password showAllErrors=showErrors class="form-group"}}

  <button type="submit">Login</button>
</form>

