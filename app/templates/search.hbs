<div id='search' class='col-md-10'>
  <div class='row'>
    <div class='col-lg-3 well'>
      <div id="category" class="facet"></div>
      <hr>
      <div id="ambiance" class="facet"></div>
      <hr>
      <div id="level" class="facet"></div>
    </div>

    <div class='col-lg-9'>
      <div id="search-input"></div>

      <div id="stats" class='hide'></div>

      <div id="hits" class='hide'></div>

      <div id="hits-list">
        {{#each model.result.hits as |event|}}
          <div class="hit">

            {{#link-to 'event' event.objectID}}
              <div class='row head'>
                <div class='col-lg-6'>
                  <h3>{{event.title}}</h3>
                </div>
                <div class='col-lg-6'>
                  <div class="details">
                    <div class="date">
                      <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                      {{moment-format event.begin_at 'DD MMMM'}}
                    </div>
                    <div class="time">
                      <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                      {{moment-format event.begin_at 'hh:mm'}}
                    </div>
                    <div class="place">
                      <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                      {{capitalize event.city}}
                    </div>
                  </div>
                </div>
              </div>

              <div class='row body'>
                <div class='col-lg-9'>
                  <div class='description'>
                   {{event.short_description}}
                  </div>
                  <div class='categories'>
                    <span class='icon-tags'></span>
                    <span>{{event.category}}</span>,
                    <span>{{event.ambiance}}</span>, for
                    <span>{{event.level}}</span> !
                  </div>
                  <div class='host'>
                    <span class='avatar-small'>
                      {{avatar-display profile=event.host}}
                    </span>

                    <span>{{name-display profile=event.host}}</span>
                  </div>
                </div>
                <div class='col-lg-3'>
                  <div class="attendees">
                    <span>{{plus-one count=event.attendees_count}} / {{plus-one count=event.capacity}}</span>
                  </div>
                </div>
              </div>
            {{/link-to}}
          </div>
        {{else}}
          <p>{{t 'search.no-results'}}</p>
          <a href="/search">{{t 'search.clear'}}</a>
        {{/each}}
      </div>
      <div id="pagination"></div>
    </div>
  </div>
</div>

<div class='col-md-2'>
  {{infos-bar hide_events_nearby=true}}
</div>

<script type="text/html" id="hit-template"></script>
<script type="text/html" id="no-results-template"></script>
